<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.groupproject.officialunisocial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityPages.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityPages.RegisterActivity" />
        <activity android:name=".ActivityPages.NotificationActivity" />
        <activity android:name=".ActivityPages.ManageEventActivity" />
        <activity android:name=".ActivityPages.ForgottenDetailsActivity" />
        <activity android:name=".ActivityPages.EventListActivity" />
        <activity android:name=".ActivityPages.EventInfoActivity" />
        <activity android:name=".ActivityPages.EditProfileActivity" />
        <activity android:name=".ActivityPages.CreateEventActivity" />
        <activity android:name=".ActivityPages.ChatroomActivity"></activity>
        <activity android:name=".ActivityPages.SocialWallActivity"></activity>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/AppTheme" />
        <!--change the theme of the crop activity-->
    </application>

</manifest>