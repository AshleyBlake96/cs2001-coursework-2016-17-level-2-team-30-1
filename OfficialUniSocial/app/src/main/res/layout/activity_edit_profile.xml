<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.groupproject.officialunisocial.ActivityPages.EditProfileActivity">

    <Button android:id="@+id/editprofilepage_back_id"
        android:background="@drawable/backnew"
        android:layout_margin="12dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:elevation="3dp"
        />
    <Button android:id="@+id/profilepage_edit_id"
        android:theme="@style/AppTheme.Button"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:text="Edit"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_blue"
        android:scaleType="centerCrop"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/navColour_id" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_below="@+id/navColour_id"
        android:elevation="2dp"
        android:layout_above="@+id/profile_scrollView_id"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageView"/>
    <View
        android:id="@+id/navBar_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:elevation="3sp"
        android:layout_below="@id/profilepage_edit_id"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/profilepage_image_id"
        android:src="@drawable/backgrd"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:foregroundGravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@id/navBar_id"
        android:elevation="2dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_below="@+id/profilepage_image_id"
        android:elevation="2dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/profilepage_username_id"
        android:textSize="25sp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profilepage_username_id"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:id="@+id/bottomImageView"
        android:elevation="2dp"
        android:layout_above="@+id/profile_scrollView_id"
        android:layout_alignParentBottom="true" />

    <Button android:id="@+id/profilepage_signOut_id"
        android:theme="@style/AppTheme.Button"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="17sp"
        android:text="Sign Out"
        android:elevation="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/profile_scrollView_id"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/profilepage_username_id"
        android:layout_above="@id/profilepage_signOut_id"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/mainLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="3dp"
            android:padding="10dp"
            android:background="@drawable/backrec">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/nameInfo_id"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profilepage_users_name_id"
                android:textColor="@color/black"
                android:text="users name"
                android:textSize="19sp"
                android:layout_margin="4sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-Mail"
                android:id="@+id/email_id"
                android:textSize="13sp"
                android:layout_marginTop="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profilepage_emailInfo_id"
                android:textColor="@color/black"
                android:text="users e-mail"
                android:layout_margin="4sp"
                android:textSize="19sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:id="@+id/gender_id"
                android:textSize="13sp"
                android:layout_marginTop="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profilepage_genderInfo_id"
                android:textColor="@color/black"
                android:text="users gender"
                android:layout_margin="4sp"
                android:textSize="19sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:id="@+id/age_id"
                android:textSize="13sp"
                android:layout_marginTop="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profilepage_ageInfo_id"
                android:textColor="@color/black"
                android:text="users age"
                android:layout_margin="4sp"
                android:textSize="19sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="University"
                android:id="@+id/university_id"
                android:textSize="13sp"
                android:layout_marginTop="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profilepage_universityInfo_id"
                android:textColor="@color/black"
                android:text="users university"
                android:layout_margin="4dp"
                android:textSize="19sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:id="@+id/numPhone_id"
                android:textSize="13sp"
                android:layout_marginTop="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profilepage_numPhoneInfo_id"
                android:textColor="@color/black"
                android:text="users number"
                android:layout_margin="4sp"
                android:textSize="19sp"
                />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
