<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/social_wall_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPages.SocialWallActivity">

    <Button android:id="@+id/back_id"
        android:background="@drawable/backnew"
        android:layout_margin="12dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:elevation="3dp"
        />
    <Button android:id="@+id/social_wall_edit_id"
        android:theme="@style/AppTheme.Button"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:text="Add +"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_blue"
        android:scaleType="centerCrop"
        android:text="Social Wall"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/navColour_id" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_below="@+id/navColour_id"
        android:elevation="2dp"
        android:layout_above="@+id/profile_scrollView_id"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageView"/>
    <View
        android:id="@+id/navBar_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:elevation="3sp"
        android:layout_below="@id/social_wall_edit_id"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:background="@drawable/pen"
        android:text="            Create"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_below="@+id/social_wall_edit_id"
        android:elevation="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/profilepage_username_id"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profilepage_username_id"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:id="@+id/bottomImageView"
        android:elevation="2dp"
        android:layout_above="@+id/profile_scrollView_id"
        android:layout_alignParentBottom="true" />

    <Button android:id="@+id/AddWall"
        android:theme="@style/AppTheme.Button"
        android:background="@drawable/stickynote1"
        android:textColor="@color/black"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textSize="17sp"
        android:text="Stick to Wall"
        android:elevation="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/profile_scrollView_id"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/profilepage_username_id"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/mainLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="3dp"
            android:padding="10dp"
            android:background="@drawable/backrec">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/social_wall_users_name_id"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:layout_margin="1sp"
                android:hint="Enter to your wall..."
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Wall"
                android:textColor="@color/black"
                android:id="@+id/email_id"
                android:textSize="13sp"
                android:layout_marginTop="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wall_view"
                android:textColor="@color/black"
                android:text=""
                android:layout_margin="4sp"
                android:textSize="19sp"
                />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
