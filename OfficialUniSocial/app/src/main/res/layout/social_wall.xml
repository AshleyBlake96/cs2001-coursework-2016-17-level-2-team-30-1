<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/social_wall_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPages.SocialWallActivity">

    <Button android:id="@+id/back_id"
        android:background="@drawable/backnew"
        android:layout_margin="12dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:elevation="3dp"
        />
    <Button android:id="@+id/social_wall_edit_id"
        android:theme="@style/AppTheme.Button"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:text="Add +"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_blue"
        android:scaleType="centerCrop"
        android:text="Social Wall"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/navColour_id" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_below="@+id/navColour_id"
        android:elevation="2dp"
        android:layout_above="@+id/profile_scrollView_id"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageView"/>
    <View
        android:id="@+id/navBar_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:elevation="3sp"
        android:layout_below="@id/social_wall_edit_id"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:background="@drawable/pen"
        android:text="            Create"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_below="@+id/social_wall_edit_id"
        android:elevation="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/profilepage_username_id"
        android:textSize="15sp"/>





















        </LinearLayout>


    </ScrollView>

</RelativeLayout>
