<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgotten_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.groupproject.officialunisocial.ActivityPages.ForgottenDetailsActivity">

    <TextView
        android:layout_width="400dp"
        android:layout_height="650dp"
        android:background="#156381"
        android:id="@+id/Background_textView_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Email"
        android:textSize="22sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="250dp"
        android:textColor="#FFFFFF"
        android:id="@+id/Email_text_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Information"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="170dp"
        android:textColor="#FFFFFF"
        android:id="@+id/Information_text_id"/>
</RelativeLayout>
