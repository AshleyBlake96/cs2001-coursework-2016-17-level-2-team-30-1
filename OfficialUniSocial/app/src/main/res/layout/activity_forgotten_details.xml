<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgotten_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.groupproject.officialunisocial.ActivityPages.ForgottenDetailsActivity">

    <TextView
        android:layout_width="400dp"
        android:layout_height="650dp"
        android:background="#FFFFFF"
        android:id="@+id/Background_textView_id"/>

    <View

        android:layout_width="340dp"
        android:layout_height="120dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="190dp"
        android:id="@+id/rectangle1_id"
        android:background="@drawable/rectangle"/>

    <View

        android:layout_width="340dp"
        android:layout_height="100dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/rectangle1_id"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"/>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="@string/Information"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="200dp"
        android:textColor="#000000"
        android:id="@+id/Information_text_id"/>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="@string/Email"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/Information_text_id"
        android:textColor="#000000"
        android:id="@+id/Email_text_id"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email_text_id"
        android:layout_marginLeft="5dp"
        android:hint="1522919@my.burnel.ac.uk"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:id="@+id/Email_editText_id" />


    <Button
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="@string/Back"
        android:background="@drawable/rectangle"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        android:layout_marginTop="443dp"
        android:textAllCaps="false"
        android:id="@+id/Back_button_id"/>

    <Button
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="@string/linkToEmail"
        android:layout_toRightOf="@+id/Back_button_id"
        android:background="@drawable/rectangle"
        android:textSize="20sp"
        android:layout_marginLeft="4dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_marginTop="443dp"
        android:id="@+id/linkToEmail_button_id" />

</RelativeLayout>
