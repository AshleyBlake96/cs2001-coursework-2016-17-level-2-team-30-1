<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.groupproject.officialunisocial.ActivityPages.LoginActivity">
    <View
        android:layout_width="400dp"
        android:layout_height="650dp"
        android:background="#ffffff"
        android:id="@+id/Background_textView_id"/>

    <View

        android:layout_width="340dp"
        android:layout_height="100dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/Rectangle"/>

    <View
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/Rectangle"/>
    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="@string/Username"
        android:textSize="22sp"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="22dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:id="@+id/Username_text_id"/>

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Username_text_id"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:hint="Ashley"
        android:textAlignment="center"
        android:inputType="text"
        android:textSize="22sp"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:id="@+id/Username_editText_id"/>

    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="@string/Password"
        android:textSize="22sp"
        android:layout_below="@id/Username_editText_id"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="22dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:id="@+id/Password_text_id"/>

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password_text_id"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:background="@android:color/transparent"
        android:inputType="text"
        android:textSize="22sp"
        android:password="true"
        android:hint="********"
        android:textColor="#FFFFFF"
        android:id="@+id/Password_editText_id" />

    <Button
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="@string/Register"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="413dp"
        android:textAllCaps="false"
        android:id="@+id/Register_button_id"/>

    <Button
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="@string/signIn"
        android:layout_toRightOf="@id/Register_button_id"
        android:layout_marginLeft="4dp"
        android:background="@drawable/rectangle"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_marginTop="413dp"
        android:id="@+id/signIn_button_id"/>

    <Button
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="@string/ForgottenDetails"
        android:layout_below="@id/Register_button_id"
        android:id="@+id/ForgottenPassword_button_id"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textAllCaps="false"/>
</RelativeLayout>
