<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.groupproject.officialunisocial.ActivityPages.ProfileActivity">

    <Button android:id="@+id/profilepage_back_id"
        android:background="@drawable/backnew"
        android:layout_margin="12dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:elevation="3dp"
        />
    <Button android:id="@+id/profilepage_edit_id"
        android:theme="@style/AppTheme.Button"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:text="Edit"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_blue"
        android:scaleType="centerCrop"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/navColour_id" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_below="@+id/navColour_id"
        android:elevation="2dp"
        android:layout_above="@+id/profile_scrollView_id"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageView"/>
    <View
        android:id="@+id/navBar_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:elevation="3sp"
        android:layout_below="@id/profilepage_edit_id"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/profilepage_image_id"
        android:src="@drawable/backgrd"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:foregroundGravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@id/navBar_id"
        android:elevation="2dp"/>

</RelativeLayout>
