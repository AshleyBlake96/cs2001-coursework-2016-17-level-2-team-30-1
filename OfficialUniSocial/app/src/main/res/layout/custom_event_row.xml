<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/event_image_id"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/event_title_id"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/event_image_id"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:id="@+id/event_info_id"
            android:text="1nfo"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/event_image_id"
            android:textColor="@android:color/black"
            android:layout_below="@+id/event_title_id"/>

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/event_date_id"
            android:text="Date"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/event_image_id"
            android:layout_below="@+id/event_info_id"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/event_location_id"
            android:text="Location"
            android:textSize="13sp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:layout_below="@+id/event_info_id"
            android:layout_alignParentEnd="true"
            />




    </RelativeLayout>
</LinearLayout>